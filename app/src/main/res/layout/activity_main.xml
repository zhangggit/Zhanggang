<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.test.MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="center"/>

    <Button
        android:id="@+id/button_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变颜色"/>
    <Button
        android:id="@+id/button_jia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_color"
        android:text="加速"/>
    <Button
        android:id="@+id/button_jian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_jia"
        android:text="减速"/>
    <com.bwie.test.MyView
        android:id="@+id/myview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:colorhuan="@color/colorAccent"
        app:xiaokuan="50dp"
        app:dakuan="60dp"/>

</RelativeLayout>
